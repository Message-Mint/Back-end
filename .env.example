# Node.js environment (development, production, test)
NODE_ENV=development

# Logging configuration
LOG_LEVEL=debug

# Server configuration
PORT=5555
CORS_ORIGIN=http://localhost:3000

# JWT configuration
JWT_SECRET=your_jwt_secret_here

# File upload configuration
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads

# PostgreSQL configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=your_database_name

# Database connection URL
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?sslmode=disable

# PostgreSQL connection pool configuration
POSTGRES_POOL_MAX=20
POSTGRES_POOL_IDLE_TIMEOUT=30000

# Application configuration
SESSION_STORAGE_NAME=default

# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# MongoDB configuration
MONGO_INITDB_ROOT_USERNAME=your_mongo_username
MONGO_INITDB_ROOT_PASSWORD=your_mongo_password
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DB=your_mongo_database

MONGO_URL=mongodb://${MONGO_INITDB_ROOT_USERNAME}:${MONGO_INITDB_ROOT_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}/${MONGO_DB}?authSource=admin
